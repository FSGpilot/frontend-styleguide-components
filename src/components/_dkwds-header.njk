{% extends '_dkwds.njk' %}
{% block body %}
<header class="header" role="banner">
  {% render '@site-title' %}
  <nav role="navigation" class="nav">
    <div class="header-mask"></div>
    <div class="nav-inner">
      {{ yield }}
    </div>
  </nav>
</header>
<div class="overlay"></div>

<style scoped>
  .header-mask {
    background-color: rgba(0, 0, 0, .2);
    position: fixed;
    top: -1000px;
    left: -1000px;
    right: -1000px;
    bottom: -1000px;
    z-index: 999;
  }

  .nav-inner,
  .nav-secondary {
    background-color: white;
    z-index: 1000;
  }
</style>
{% endblock %}
